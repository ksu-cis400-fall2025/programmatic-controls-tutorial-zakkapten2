<UserControl x:Class="DrinkChoice.RestaurantControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrinkChoice"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <DockPanel Name="restDock" Margin="30">
        <TextBlock DockPanel.Dock="Top" Margin="20" Text="{Binding Path=Name, StringFormat='Name: {0}'}"/>
        
        <TextBlock DockPanel.Dock="Bottom" Margin="20" Text="{Binding Path=NumChosen, StringFormat='Drinks chosen: {0}'}"/>
    </DockPanel>
</UserControl>
